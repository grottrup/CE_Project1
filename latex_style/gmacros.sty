\newenvironment{mycolbox}[1]
{%  Color suggestions: grey, OliveGreen, NavyBlue
    \begin{tcolorbox}[enhanced,
        colback=#1!10,
        colframe=#1!10,
        width=\textwidth,
        arc=0mm, auto outer arc,
        borderline west = {1mm}{0mm}{#1!40}
       ]
}
{
    \end{tcolorbox}
}

